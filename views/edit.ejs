<% include partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Edit the inforfation given</h1>
            <div style="width:30%;  margin: 25px auto;">
                    <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="car[name]" value="<%= car.name %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="car[model]" value="<%=car.model%>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="car[license]" value="<%=car.license%>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Update</button>
                        </div>
                        
                        
                        
                    </form>
                    <a href="/cars"> Go back to the parking slot</a>
            </div>
            
            
            
    </div>
        
</div>


